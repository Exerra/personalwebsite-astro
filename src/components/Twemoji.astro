---
import ExtractUnicode from "extract-unicode"

export interface Props {
    emoji: string;
}

const { emoji } = Astro.props

let codepoints = ExtractUnicode(emoji)

let image = `https://cdn.exerra.xyz/svg/twemoji/${codepoints.join("-")}.svg`
---

<img draggable={false} src={image} alt={emoji} style={{ width: "1.2em" }} />