---
import Title from "./Title.astro";

    const { name, subtitle } = Astro.props
---

<div class={"container mt-32 justify-between mx-auto px-8 md:px-14 lg:px-24 w-full"}>
    <Title hasSubheading={subtitle != undefined ? true : false}>{name}</Title>
    {subtitle != undefined ? <h2 class="text-3xl text-gray-600 pb-10">{subtitle}</h2> : <></>}
    <slot />
</div>