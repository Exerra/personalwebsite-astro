---
import { Image } from '@astrojs/image/components';

export interface Props {
	title: string;
}

const { title, description } = Astro.props
---

<div class={"w-full basis-1/1 grow lg:basis-1/3 shadow-2xl bg-grey-card text-beige rounded-[35px] overflow-hidden"}>
    <Image alt={""} class="waves" src={"/waves.svg"} height={160} width={160} />
    <div class="p-6">
        <h2 class="text-3xl font-bold">{title}</h2>
        <hr class="border-2 border-beige rounded-xl my-2" />
        <p class="text-lg"><slot /></p>
    </div>
</div>

<!-- With Tailwind it has some weird funkyness so for now ima just use style -->
<style>
    div {
        position:relative;
    }
    .waves {
        position: absolute;
        top: 0;
        left: 0;
    }
</style>