---

import { SEO } from "astro-seo"
import Cursor from "../components/Cursor.astro";

export interface Props {
	title: string;
	description: string;
	image?: string;
}

const { title, description, image } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<link rel="me" href="https://indieweb.social/@exerra" />

		<SEO 
			title={title}
			description={description}
			twitter={{
				creator: "@Exerra"
			}}
			openGraph={{
				basic: {
					title: title,
					image: "https://s.gravatar.com/avatar/6a80069ec71ef1ea1a488cc3183e66cb?s=1024",
					type: "profile",
				},
				optional: {
					description: description,
				},
				image: {
					alt: "Exerra's profile picture"
				}
			}}
			extend={{
				link: [{ rel: "icon", href: "https://cdn.exerra.xyz/png/pfp.png" }],
				meta: [
					{ name: "theme-color", content: "#F2EDE3" }
				]
			}}
		/>
		
	</head>
	<body class={"bg-beige"} style={{ background: "#F2EDE3" }}>
		<Cursor />
		<main><slot /></main>
		<footer class={"p-10 text-center"}>
			<p class="font-bold">&copy; Exerra</p>
		</footer>
	</body>
</html>

<style is:inline>
	@import url('https://fonts.googleapis.com/css2?family=Inria+Sans:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap');

	html {
		font-family: "Inria Sans", sans-serif;
	}
</style>